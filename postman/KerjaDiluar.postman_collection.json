{
  "info": {
    "name": "KerjaDiluar API",
    "_postman_id": "d38a1d28-9f65-4a7b-b2f5-kerjadiluar",
    "description": "Collection untuk API Auth Service & Job Service dengan auto-save JWT token.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Ping Auth",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{auth_url}}/ping",
              "host": ["{{auth_url}}"],
              "path": ["ping"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/register",
              "host": ["{{auth_url}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/login",
              "host": ["{{auth_url}}"],
              "path": ["login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.environment.set(\"token\", jsonData.token);",
                  "    console.log(\"âœ… JWT token saved to environment\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Job Service",
      "item": [
        {
          "name": "Ping Job",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{job_url}}/ping",
              "host": ["{{job_url}}"],
              "path": ["ping"]
            }
          }
        },
        {
          "name": "Get Jobs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{job_url}}/jobs",
              "host": ["{{job_url}}"],
              "path": ["jobs"]
            }
          }
        },
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Backend Developer\",\n  \"description\": \"Kerja remote di luar negeri\"\n}"
            },
            "url": {
              "raw": "{{job_url}}/jobs",
              "host": ["{{job_url}}"],
              "path": ["jobs"]
            }
          }
        }
      ]
    }
  ]
}
